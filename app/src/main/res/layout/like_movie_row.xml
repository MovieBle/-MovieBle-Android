<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/like_item_pg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/like_post_img"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:scaleType="center"
        android:src="@drawable/test_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="제목"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/like_post_img"
        app:layout_constraintStart_toStartOf="@+id/like_post_img"
        app:layout_constraintTop_toBottomOf="@+id/like_post_img" />


</androidx.constraintlayout.widget.ConstraintLayout>